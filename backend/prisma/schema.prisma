generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Nft {
  id           String    @id @map("_id")
  name         String
  castHash     String    
  nftId        String
  owner        String?
  imageUrl     String?
  createdAt    DateTime  @default(now())
}

model Mention {
  id        String   @id @map("_id")
  status    String
  created   DateTime @default(now())
  cast      Json
}